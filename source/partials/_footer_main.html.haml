%footer.main
  %ul.large-col
    %li
      %h5.heading Recent Articles

    %li
      %ol
        - blog.articles[0...3].each do |article|
          %li
            = link_to article.title, article
            %h5
              = article.date.strftime('%b %e')

  %ul.small-col
    %li
      %h5.heading Tags

    %li
      %ol
        - blog.tags.each do |tag, articles|
          %li
            = link_to "#{tag}", tag_path(tag)
