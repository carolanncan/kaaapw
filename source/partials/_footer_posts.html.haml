%footer.posts
  %h5.heading Next Up

  - next_article = current_article.next_article
  - prev_article = current_article.previous_article

  %ul
    %li
      - if prev_article
        = link_to prev_article.url do
          %h1
            = prev_article.title
          %h2
            = prev_article.data.subtitle

      - else next_article
        = link_to next_article.url do
          %h1
            = next_article.title
          %h2
            = next_article.data.subtitle
